@using Web.Mvc.Extensions
@using DowJones.Factiva.Currents.Models

@inherits DowJones.Web.Mvc.UI.CompositeComponent<NewsstandModel>
@ClientPlugin dj_Newsstand
@ScriptResource RelativeResourceName=Newsstand.js

@{ 
    CssClass += " dj_Newsstand";
}

<div class="module">
    <header>
        <i class="icon-tasks icon-white"></i>
        <span>Newsstand</span>
    </header>
    <div class="content">
		<div class="row">
			@foreach(var headline in Model.CurrentsHeadlines.Take(3))
			{
				<div class="span4">@Html.DJ().Render(headline)</div>
			}
		</div>
    </div>
</div>