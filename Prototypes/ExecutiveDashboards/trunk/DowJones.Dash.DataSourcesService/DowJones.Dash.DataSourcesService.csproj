		<Exec Command="sc delete $(ServiceName)" ContinueOnError="true" />
		<Exec Command="sc \\$(DeploymentServer) create $(ServiceName) binpath= '$(OutDir)\$(AssemblyName).exe' start= auto displayName= $(ServiceDisplayName)" />
