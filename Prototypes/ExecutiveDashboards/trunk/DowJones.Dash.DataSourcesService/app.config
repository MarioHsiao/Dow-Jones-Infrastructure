<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net>
		<appender name="File" type="log4net.Appender.FileAppender">
			<threshold value="ALL" />
			<file value="log.xml" />
			<appendToFile value="false" />
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
			<layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
		</appender>

		<appender name="DebugAppender" type="log4net.Appender.DebugAppender">
			<threshold value="DEBUG" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d{ISO8601} [%t] %-5p [%X{requestId}] [%x] %c{1} - %m%n" />
			</layout>
		</appender>

		<appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
			<mapping>
				<level value="ERROR" />
				<foreColor value="White" />
				<backColor value="Red, HighIntensity" />
			</mapping>
			<mapping>
				<level value="Warn" />
				<backColor value="Yellow" />
			</mapping>
			<mapping>
				<level value="Info" />
				<backColor value="Green" />
			</mapping>
			<mapping>
				<level value="Debug" />
				<backColor value="Cyan" />
			</mapping>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="Info" />
			<appender-ref ref="ColoredConsoleAppender" />
		</root>
	</log4net>
	<appSettings>
		<add key="DefaultPollDelay" value="10" />
		<add key="ChartBeatApi.ApiKey" value="9afde3c7a533572878d27e80cf001244" />
		<add key="ChartBeatSite.ApiKey" value="47bf253a86e9a55dbbd94358aa130089" />
		<add key="ChartBeatApi.BasePath" value="http://api.chartbeat.com" />
		<add key="ChartBeatSite.BasePath" value="http://chartbeat.com" />
		<add key="ChartBeat.PollDelay" value="3" />
		<add key="Gomez.PollDelay" value="15" />
		<add key="Splunk.BasePath" value="https://192.168.101.38:8089/servicesNS/nobody/webintelligence" />
		<add key="Splunk.PollDelay" value="10" />
		<add key="Splunk.Username" value="dbapiuser" />
		<add key="Splunk.Password" value="dbapiuser" />
	</appSettings>
	<connectionStrings>
		<add name="Gomez" connectionString="Data Source=10.0.64.14;Initial Catalog=master;User Id=webuser;Password=webpwd;Asynchronous Processing=True" />
	</connectionStrings>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

	<system.net>
		<settings>
			<!-- Accept invalid SSL certificates; we're only hitting trusted data sources -->
			<servicePointManager checkCertificateName="false" checkCertificateRevocationList="false" />
		</settings>
