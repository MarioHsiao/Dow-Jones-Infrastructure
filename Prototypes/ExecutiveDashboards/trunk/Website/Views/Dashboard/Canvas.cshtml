@using System.Web.Optimization
@using DowJones.Dash.Components.Models.ThemeManager
@{
    ViewBag.Title = "Dash - Executive Dashboard";

    DJ.ScriptRegistry().OnDocumentReady(@"window['Dash'] = new DJ.UI.Dash($('body'), window['meta']).start(window['domain']);");
}

@section styles {
    @Styles.Render("~/css/dashboard")
}
<section id="world-map-module-container" class="row-fluid">
    <div id="world-map-module-inner">
        <div id="world-map-module">
            <div class="module dj_module canvas-module script-module"
                data-description="Average page load times, broken down by country">
                <div class="module-header dj_module-header dj_module-handle" style="cursor: move;">
                    <h3 class="module-title dj_module-title">Page Load By Country
                    </h3>
                    <div class="actions-container" style="">
                        <span class="fi"><i class="icon-remove icon-white"></i></span>
                    </div>
                </div>
                <div class="module-core dj_module-core" style="">
                    <div class="dj_content dj_module-content module-content two-row" style="">
                        <div class="worldMapContainer"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="dashboard" class="row-fluid">

    @DJ.Render(Model)
</section>

@Html.Action("Gallery")

<div class="modal hide fade" id="browserShareModal" tabindex="-1" role="dialog" aria-labelledby="browserShareModalLabel"
    aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="browserShareModalLabel">Browser Share</h3>
    </div>
	<div class="modal-body">
		<div id="browserShareContainer"></div>
	</div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>
<script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/dashboard.js")" type="text/javascript"></script>

<script type="text/javascript">
    DJ.$dj.require(['$dj'], function ($dj) {
        window.meta = { options: { moduleResizeUrl: '@Url.Content("~/dashboard/modules/resize/")' } };
        window.activeTab = $('.dashNav li.active');
        window.domain = { source: activeTab.data('source'), map: activeTab.data('map') };
    })();
</script>

