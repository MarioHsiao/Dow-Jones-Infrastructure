@using System.Web.Optimization
@using DowJones.Dash.Website
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DASH: Executive Dashboard</title>

    <link rel="stylesheet" href="~/content/layout.css" />
	<link rel="stylesheet" href="~/content/bootstrap-responsive.css" />
	<link rel="stylesheet" href="~/content/perfGauge.css" />
    <link rel="stylesheet" href="~/content/statsMap.css" />
    @DJ.ScriptRegistry().RenderHead()
    @Scripts.Render("~/bundles/core")
    
    <script src="http://use.edgefonts.net/quantico.js"></script>
	<script src="http://use.edgefonts.net/questrial.js"></script>
    @RenderSection("styles", false)
</head>
<body>
    <div class="headerNav">
        <div class="headBar">
            <div class="container">
                <div class="brand">
                    <a href="@Url.Content("~/")" class="logo">Dash</a>
                    <h4 class="tagline">Executive Dashboards</h4>
                </div>
            </div>
        </div>
    </div>
    
    @RenderSection("header", false)

    <div class="bodyContent">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <footer class="">
        <div class="container">
            <h5>Welcome to the private beta of Executive Dashboards!</h5>
            <div class="copyright">
                ©@DateTime.Now.Year Factiva, Inc. All rights reserved. <a href="#">Privacy Policy</a>
            </div>
        </div>
        <div class="container">
            <span class="username pull-left">Logged in as: @User.Identity.Name</span>
            <span class="version pull-right">Version: @MvcApplication.Version.Value (@MvcApplication.AssemblyTimestamp
                UTC)</span>

        </div>
    </footer>

    <div class="modal hide fade" id="dashAlertModal" tabindex="-1" role="dialog" aria-labelledby="dashAlertModalLabel"
        aria-hidden="true" data-backdrop="static" data-keyboard="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="dashAlertModalLabel">Alert</h3>
        </div>
        <div class="modal-body">
            <p></p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Ok</button>
        </div>
    </div>
</body>
@DJ.ScriptRegistry().Render()
@DJ.StylesheetRegistry().Render()
@RenderSection("scripts", false)
</html>
