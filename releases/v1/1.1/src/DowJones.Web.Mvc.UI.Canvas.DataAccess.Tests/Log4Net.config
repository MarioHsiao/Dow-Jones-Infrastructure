<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <!-- Define some output appenders -->
  <appender name="AspNetTraceAppender" type="log4net.Appender.AspNetTraceAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level -%message"/>
    </layout>
  </appender>
  
  <appender name="log2console" type="log4net.Appender.FileAppender">
    <file value="c:\\logfiles\\log2console.txt" />
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
  </appender>
  
  <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="c:\\logfiles\\logfile.txt" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="ALL" />
      <levelMax value="FATAL" />
    </filter>
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <datePattern value="yyyyMMdd'.txt'" />
    <rollingStyle value="Date" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.XmlLayoutSchemaLog4j" />
  </appender>
  
  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="c:\\logfiles\\logfile.txt" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="ALL" />
      <levelMax value="FATAL" />
    </filter>
    <appendToFile value="false" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <datePattern value="yyyyMMdd'.txt'" />
    <rollingStyle value="Date" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">				
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>
  
  <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>
  
  <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
    <!--<applicationName value="Search 2.0 Preview" />-->
    <applicationName value="Search 2.0 Preview" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="DEBUG" />
      <levelMax value="FATAL" />
    </filter>
    <layout type="log4net.Layout.PatternLayout">
    <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
    <mapping>
      <level value="ERROR" />
      <eventLogEntryType value="Error" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <eventLogEntryType value="Information" />
    </mapping>
  </appender>

  <appender name="FactivaGatewayLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="c:\logfiles\DashboardAPI_FactivaGateway.log" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <acceptOnMatch value="true" />
      <levelMin value="ALL" />
      <levelMax value="FATAL" />
    </filter>
    <appendToFile value="true" />
    <datePattern value="yyyyMMdd'.txt'" />
    <rollingStyle value="Date" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <logger name="Factiva.Gateway.Logging.V1_0.Logger">
    <level value="ALL" />
    <appender-ref ref="FactivaGatewayLogFileAppender" />
    <appender-ref ref="FileAppender" />
  </logger>
  
  <root>
    <level value="ALL" /><appender-ref ref="FileAppender" />
    <appender-ref ref="log2console" />
    <!--<appender-ref ref="TraceAppender"/>		
    <appender-ref ref="AspNetTraceAppender"/>
    <appender-ref ref="EventLogAppender" />  this has been removed for convenience -->
  </root>
</log4net>
