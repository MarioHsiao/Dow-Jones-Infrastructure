@using DowJones.Web.Mvc.Extensions;
@model DowJones.Web.Mvc.UI.Components.Models.SimpleAlertModel
@ClientPlugin dj_SimpleAlert
@ClientTemplate RelativeResourceName=ClientTemplates.Options.htm, TemplateId=options
@ClientTemplate RelativeResourceName=ClientTemplates.NewsFilter.htm, TemplateId=newsFilter
@ScriptResource RelativeResourceName=SimpleAlert.js, PerformSubstitution=true
@{ 
    CssClass = "dj_SimpleAlert";
    Html.DJ().ScriptRegistry().WithUnderscoreJS();
}
<div>
    <div class="title"></div>
    <table cellspacing="0" cellpadding="0" width="100%">
        <tbody>
            <tr>
                <td class="first">@Html.DJ().Token("enterFldrName"):
                </td>
                <td>
                    <input type="text" class="folderName" maxlength="25" />
                </td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("sources"):
                </td>
                <td>
                    <select class="sourceList">
                    </select>
                </td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("searchCriteria"):
                </td>
                <td>
                    <input type="text" size="30" maxlength="500" class="searchText" />
                </td>
            </tr>
            <tr class="newsFilter">
                <td class="first">
                    <span class="newsFilter">@Html.DJ().Token("newsFilters")</span>
                </td>
                <td></td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("enterEmail"):
                </td>
                <td>
                    <input type="text" disabled="disabled" class="emailAddress" />
                </td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("emailFmt"):
                </td>
                <td>
                    <select class="emailFormat">
                    </select>
                </td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("selectDeliveryTime"):
                </td>
                <td>
                    <select class="deliveryTime">
                    </select>
                </td>
            </tr>
            <tr>
                <td class="first">@Html.DJ().Token("removeDuplicateArticles"):
                </td>
                <td>
                    <select class="removeDuplicate">
                    </select>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="buttons">
        <ul class="dc_list">
            <li class="dc_item"><a href="javascript:void(0);" class="dashboard-control dc_btn dc_btn-3">@Html.DJ().Token("cancel")</a>
            </li>
            <li class="dc_item"><a href="javascript:void(0);" class="dashboard-control dc_btn dc_btn-1">@Html.DJ().Token("startTracking")</a>
            </li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
