@model HeadlineListCarouselModel
@ClientPlugin dj_headlineListCarousel
@ScriptResource RelativeResourceName=HeadlineListCarousel.js
@ScriptResource RelativeResourceName=jquery.jcarousel.js
@ClientTemplate RelativeResourceName=HeadlineListCarouselClientTemplate.htm, TemplateId=itemTemplate

<div class='headline-snippet-container-vertical-hover'></div>

<ul class="dj_carousel jcarousel-skin-@Model.SkinName">
    @{ var index = 0; }
    @foreach(var headline in Model.Headlines) {
        <li class="jcarousel-item jcarousel-item-vertical jcarousel-item-@index jcarousel-item-@index-vertical" jcarouselindex="@(index++)" style="display:none">
            <div class="headline-container-vertical">

                @* Image *@
                <div class="headline-image-container-vertical">
                    <a href="@(headline.ThumbnailHref)">
                        <img class="image" src="@headline.ThumbnailSourceUri" />
                    </a>
                </div>

                @* Title *@
                <div class="headline-title-container-vertical">
                    <a class="link" href="@headline.ExternalUri">
                        @* Don't add any unintentional whitespace between the items *@
                        @foreach(var item in headline.TitleItems){<span>@item</span><span />}
                    </a>
                </div>

                @* Time *@
                <div class="headline-time-container-vertical">
                    <span class="time">@headline.Time</span>
                </div>

                @* Extension *@
                <div class="headline-extension-container-vertical" style="display: none;">
                    <span class="extension" />
                </div>

                @* Snippet *@
                <div class="headline-snippet-container-vertical-inline" />

            </div>
        </li>
    }

</ul>