@{
    ViewBag.Title = "Article";
}

@Html.DJ().StylesheetRegistry().Include("~/Content/css/ArticleControl.css")
@Html.DJ().StylesheetRegistry().Include("~/Content/css/ArticleTranslator.css")
@Html.DJ().StylesheetRegistry().Include("~/Content/css/base.css")

<style type="text/css">
    .dj_article_index { position:absolute; width: 35px; text-align: right; }
    .dj_article_index + .dj_article_section { margin:0; margin-left: 45px; position: relative; }
    .dj_article_paragraph {padding-bottom:5px; margin:0; margin-top:0 !important;}
    p.dj_article_paragraph img 
    {
    	float:right;
        margin: 0 0 1.5em 0;      
    }
    
</style>

<script type="text/javascript">
    function onLangTransClick(e, d) {
        var dd = eval('(' + d.data + ')');
        window.open('/TranslateArticle/index/id?accessionnumber=' + dd.accessionnumber + '&sourcelanguage=' + dd.sourcelanguage + '&targetlanguagecode=' + dd.targetlanguageCode + '&targetlanguage=' + dd.targetlanguage);
    }
</script>
@Html.DJ().Render(Model)


