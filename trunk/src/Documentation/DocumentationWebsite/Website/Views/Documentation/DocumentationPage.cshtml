@model PageViewModel
@{
    ViewBag.Title = "Dow Jones Component Explorer :: " + Model.Category.DisplayName + " > " + Model.DisplayName;
}
@helper RenderMenuItems(ContentSectionViewModel contentSection, int level = 0)
{
    <li class="@(level > 0 ? "child" : "")"><a href="#@contentSection.AnchorId">@contentSection.DisplayName</a>
    </li>
}
@helper RenderSection(ContentSectionViewModel contentSection, int level = 0)
{
    <section id="@contentSection.AnchorId" class="row-fluid level-@level @(contentSection.Collapsible && level == 0 ? "collapsible" : "") @(contentSection.Selected ? "selected" : "")">
        @if (level == 0)
        {
            <header class="@(contentSection.HasChildren ? "parent": "")">
                <h3>@contentSection.DisplayName</h3>
            </header>
        }
        @if (contentSection.HasChildren)
        {
            <div>
                <div class="child-links">
                    @foreach (var child in contentSection.Children)
                    {
                        <span class="child-link btn btn-mini btn-inverse @(child.Selected ? "active" : "")" data-ref="#@child.AnchorId">@child.DisplayName</span>
                    }
                </div>

                @foreach (var child in contentSection.Children)
                {
                    @RenderSection(child, level + 1)
                }
            </div>
        }
        else
        {
            <div>
                @Html.DocumentationSection(contentSection)
            </div>
        }
    </section>
}
@section styles {
    @Styles.Render("~/Styles/explorer")
}

<div class="container-fluid">
    <div class="row-fluid">
        <div id="explorerArea">
            <div class="span2">
                @if (Model.HasChildren)
                {
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            @foreach (var child in Model.Children)
                            {
                                @RenderMenuItems(child)
                            }
                        </ul>
                    </div>
                    <!--/.well -->
                }
            </div>
        </div>
        <div class="span10 contentWell">
            <header class="span12">
                <h2 class="pull-left">@Model.DisplayName</h2>
            </header>

            <div class="content">
                @if (!Model.HasChildren)
                {
                    @Html.DocumentationPage()
                }
                @foreach (var child in Model.Children)
                {
                    @RenderSection(child)
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/syntaxhighlighter-js")
    @Scripts.Render("~/bundles/explorer")
}
