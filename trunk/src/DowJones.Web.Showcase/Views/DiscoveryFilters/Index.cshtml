@using System.Configuration
@{
    ViewBag.Title = "Discovery Filters";
}
<link href="@ConfigurationManager.AppSettings["InfrastructureShowcase.BasePath"]/styles/css/DiscoveryFilters/DiscoveryFilters.css" rel="stylesheet" /><script type="text/javascript" src="@ConfigurationManager.AppSettings["InfrastructureShowcase.BasePath"]/content/js/DiscoveryFilters.js"></script>
<!-- required file! DJ.add won't work without "common.js" being available -->
    <script src="@ConfigurationManager.AppSettings["InfrastructureShowcase.BasePath"]/common.js" type="text/javascript"></script>
     <div id="discoveryFiltersContainer" style="width:240px;"></div>

    <script type="text/javascript">
        var dataObj = getDiscoveryFiltersData();
        DJ.add("DiscoveryFilters", {
            container: "discoveryFiltersContainer",
            data: dataObj
        }).done(function (comp) {
            // Attach handler for headline click event
            comp.on("exportClick.dj.DiscoveryFilters", function () {
                alert("Export Clicked!!!");
            });
        }); 
    </script>
