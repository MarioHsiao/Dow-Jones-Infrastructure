<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!-- Define some output appenders -->
	<appender name="AspNetTraceAppender" type="log4net.Appender.AspNetTraceAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level -%message"/>
		</layout>
	</appender>	
	
	<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="c:\\logfiles\\logfile.log" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<acceptOnMatch value="true" />
			<levelMin value="ALL" />
			<levelMax value="FATAL" />
		</filter>
		<appendToFile value="false" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<datePattern value="yyyyMMdd'.txt'" />
		<rollingStyle value="Date" />
		<staticLogFileName value="true" />
		<layout type="log4net.Layout.PatternLayout">				
			<conversionPattern value="%date [%thread] %-5level - %message%newline" />
		</layout>
	</appender>

    <appender name="RollingLogFileAppender_TINFO" type="log4net.Appender.RollingFileAppender">
        <file value="c:\\logfiles\\TINFO\\logfile.log" />
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="TINFO"/>
            <acceptOnMatch value="true"/>
        </filter>
        <filter type="log4net.Filter.LoggerMatchFilter">
            <loggerToMatch value="Factiva.Gateway.Logging.V1_0"/>
            <acceptOnMatch value="true"/>
        </filter>
        
        <filter type="log4net.Filter.DenyAllFilter" />
        <filter type="log4net.Filter.LevelRangeFilter">
            <acceptOnMatch value="true" />
            <levelMin value="TINFO" />
            <levelMax value="TINFO" />
        </filter>        
        <appendToFile value="true" />
        <datePattern value="yyyyMMdd'.txt'" />
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <rollingStyle value="Composite" />
        <maxSizeRollBackups value="-1" />
        <maximumFileSize value="10MB" />
        <staticLogFileName value="false" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date [%thread] %-5level - %message%newline" />
        </layout>
    </appender>

    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
		<filter type="log4net.Filter.LevelRangeFilter">
			<acceptOnMatch value="true" />
			<levelMin value="ALL" />
			<levelMax value="FATAL" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date [%thread] %-5level - %message%newline" />
		</layout>
	</appender>
	
	<appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
		<!--<applicationName value="Search 2.0 Preview" />-->
		<applicationName value="Search 2.0 Preview" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<acceptOnMatch value="true" />
			<levelMin value="DEBUG" />
			<levelMax value="FATAL" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
		<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
		</layout>
		<mapping>
			<level value="ERROR" />
			<eventLogEntryType value="Error" />
		</mapping>
		<mapping>
			<level value="DEBUG" />
			<eventLogEntryType value="Information" />
		</mapping>
	</appender>
	
	<root>
		<level value="ALL" />
        	<appender-ref ref="RollingLogFileAppender" />
		      <appender-ref ref="AspNetTraceAppender"/>
<!--        	<appender-ref ref="RollingLogFileAppender_TINFO" />
		<appender-ref ref="TraceAppender"/>
		<appender-ref ref="EventLogAppender" />  this has been removed for convinence 
    -->
	</root>
</log4net>